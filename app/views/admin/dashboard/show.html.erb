<section class="admin-dashboard container mt-5">
  <h1>Admin Dashboard</h1>

  <div class="row">
    <!-- Products Count -->
    <div class="col-md-6">
      <div class="card text-white bg-primary mb-3">
        <div class="card-body">
          <h5 class="card-title">Products</h5>
          <p class="card-text">
            There are <strong><%= @product_count %></strong> products in the database.
          </p>
        </div>
      </div>
    </div>

    <!-- Categories Count -->
    <div class="col-md-6">
      <div class="card text-white bg-success mb-3">
        <div class="card-body">
          <h5 class="card-title">Categories</h5>
          <p class="card-text">
            There are <strong><%= @category_count %></strong> categories in the database.
          </p>
        </div>
      </div>
    </div>
  </div>
</section>